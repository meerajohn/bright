= simple_form_for @category, defaults: {input_html: { class: "form-control" }} do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-6
        = f.input :code
      .col-md-6
        = f.input :name
    .row
      .col-md-6
        = f.input :kind,                                |
          label: "Type",                                |
          collection: Settings.category.kinds,          |
          input_html: {class: "form-control selectize"} |
    .row
      .col-md-12
        = f.input :notes

  .form-actions
    = f.button :submit
    = link_to @category do
      %button.btn.btn-default{type: "button"} Cancel
