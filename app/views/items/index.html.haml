%h1.page-header
  Items
  %small / Index
.row
  .col-md-12
    .text-right
      = link_to new_item_path do
        %button.btn.btn-success{type: "button"} New
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Code
            %th Name
            %th Category
            %th Type
            %th Format
            %th.action-cell
        %tbody
          - @items.each do |item|
            %tr
              %td= item.id
              %td= item.code
              %td= item.name
              %td= item.category.name
              %td= item.kind
              %td= item.format
              %td.action-cell
                = link_to item do
                  %span.btn-xs.btn-info
                    %i.fa.fa-search
                  %span.spacer
                = link_to edit_item_path(item) do
                  %span.btn-xs.btn-primary
                    %i.fa.fa-pencil
.row
  .col-md-12
    = paginate @items
