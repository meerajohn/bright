%h1.page-header
  Items
  %small / View
.row
  .col-md-12
    %p#notice= notice
    .text-right
      = link_to @item, method: :delete, confirm: 'Are you sure?' do
        %button.btn.btn-danger{type: "button"} Delete
      = link_to item_clone_path(@item) do
        %button.btn.btn-info{type: "button"} Clone
      = link_to edit_item_path(@item) do
        %button.btn.btn-primary{type: "button"} Edit
      = link_to new_item_path do
        %button.btn.btn-success{type: "button"} New

    .row
      .col-md-6
        = display_field @item.code, label: 'Code'
      .col-md-6
        = display_field @item.name, label: 'Name'
    .row
      .col-md-6
        = display_field @item.category.name, label: 'Category'
      .col-md-6
        = display_field @item.subject, label: 'Subject'
    .row
      .col-md-6
        = display_field @item.creator.name, label: 'Author' if @item.creator
    .row
      .col-md-6
        = display_field @item.kind, label: 'Type'
      .col-md-6
        = display_field @item.format, label: 'Format'
    .row
      .col-md-6
        = display_field @item.publisher, label: 'Publisher'
      .col-md-6
        = display_field @item.published_date, label: 'Published Date'
    .row
      .col-md-6
        = display_field @item.pages, label: 'Pages'
      .col-md-6
        = display_field @item.language, label: 'Language'
    .row
      .col-md-6
        = display_field @item.isbn_10, label: 'ISBN(10)'
      .col-md-6
        = display_field @item.isbn_13, label: 'ISBN(13)'
    .row
      .col-md-6
        = display_field @item.rights, label: 'Rights'
      .col-md-6
        = display_field @item.rating, label: 'Rating'
    .row
      .col-md-12
        = display_field @item.tags, label: 'Tags'
    .row
      .col-md-12
        = display_field @item.excerpt, label: 'Excerpt'
    .row
      .col-md-12
        = display_field @item.notes, label: 'Notes'
