%h1.page-header Assets
.row
  .col-md-12
    %h2.sub-header Index
    .text-right
      = link_to new_asset_path do
        %button.btn.btn-success{type: "button"} New
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Code
            %th Name
            %th Category
            %th Type
            %th Format
            %th.action-cell
        %tbody
          - @assets.each do |asset|
            %tr
              %td= asset.id
              %td= asset.code
              %td= asset.name
              %td= asset.category.name
              %td= asset.kind
              %td= asset.format
              %td.action-cell
                = link_to asset do
                  %span.btn-xs.btn-info
                    %i.fa.fa-search
                  %span.spacer
                = link_to edit_asset_path(asset) do
                  %span.btn-xs.btn-primary
                    %i.fa.fa-pencil
.row
  .col-md-12
    = paginate @assets
