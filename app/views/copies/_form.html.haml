= simple_form_for @copy, defaults: {input_html: { class: "form-control" }} do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-6
        = f.association :asset, input_html: { class: 'selectize' }
      .col-md-6
        = f.input :accession_no
    .row
      .col-md-6
        = f.input :procured_date, as: :datepick
    .row
      .col-md-6
        = f.input :quality
      .col-md-6
        = f.input :status
    .row
      .col-md-12
        = f.input :notes

  .form-actions
    = f.button :submit
    = link_to @copy do
      %button.btn.btn-default{type: "button"} Cancel
