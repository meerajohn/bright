= simple_form_for @creator, defaults: {input_html: { class: "form-control" }} do |f|
  .row
    .col-md-12
      %p#notice= notice
      .text-right
        = f.button :submit, class: 'btn-primary'
        = link_to @creator do
          %button.btn.btn-default{type: "button"} Cancel

  = f.error_notification

  .form-inputs
    .row
      .col-md-6
        = f.input :kind,                                |
          label: "Type",                                |
          collection: Settings.creator.kinds,           |
          include_blank: false,                         |
          input_html: {class: "form-control selectize"} |
    .row
      .col-md-4
        = f.input :first_name
      .col-md-4
        = f.input :middle_name
      .col-md-4
        = f.input :last_name
    .row
      .col-md-6
        = f.input :full_name
      .col-md-6
        = f.input :sort_name
    .row
      .col-md-12
        = f.input :notes

  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to @creator do
      %button.btn.btn-default{type: "button"} Cancel
